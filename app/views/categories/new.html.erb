<h1 align="center">Create a New Category</h1>

<%= render 'shared/errors' , obj: @category%>
<div class='row'>
  <div class='col-12'>
    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-12">
        <%= f.label :name %>
      </div>
      <div class="col-12">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Category Name...", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10 text-center">
        <%= f.submit class:'btn btn-primary btn-lg' %>
      </div>
    </div>
  <% end %>
  <div class="col-4 col-offset-4 text-center">
    <%= link_to  "[Cancel request and return to articles listing]", articles_path, class: 'article-form-cancel' %>
    </div>
