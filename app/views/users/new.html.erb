<%= render 'shared/errors' , obj: @user%>
<div class='row'>
  <div class='col-xs-20'>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-20">
        <%= f.label :username %>
      </div>
      <div class="col-sm-20">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter Username...", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-20">
        <%= f.label :email %>
      </div>
      <div class="col-sm-50">
        <%= f.email.field :email, class: "form-control", placeholder: "Enter Email..." %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-20">
        <%= f.label :password %>
      </div>
      <div class="col-sm-50">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter Password..." %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  <% end %>
  <div class="col-xs-4 col-xs-offset-4">
    <%= link_to "Cancel request and return to articles listing", articles_path, class: 'article-form-cancel' %>
    </div>
  </div>
</div>
