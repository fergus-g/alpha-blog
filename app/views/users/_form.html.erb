<%= render 'shared/errors' , obj: @user%>
<div class='row'>
  <div class='col-12'>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-12">
        <%= f.label :username %>
      </div>
      <div class="col-12">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter Username...", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-12">
        <%= f.label :email %>
      </div>
      <div class="col-12">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter Email..." %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-12">
        <%= f.label :password %>
      </div>
      <div class="col-12">
        <%= (@user.new_record? ? f.password_field :password, class: "form-control", placeholder: "Enter Password..." ) %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10 text-center">
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: 'btn btn-primary btn-lg') %>
      </div>
    </div>
  <% end %>
  <div class="col-4 col-offset-4 text-center">
    <%= link_to  "[Cancel request and return to articles listing]", articles_path, class: 'article-form-cancel' %>
    </div>
  </div>
</div>
